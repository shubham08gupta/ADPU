<resources>

    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:bottomBright">#FFFFFFFF</item>
        <item name="android:bottomDark">#FFFFFFFF</item>
        <item name="android:bottomMedium">#FFFFFFFF</item>
        <item name="android:centerBright">#FFFF0000</item>
        <item name="android:centerDark">#FFFF0000</item>
        <item name="android:centerMedium">#FFFF0000</item>
        <item name="android:fullBright">#FFFF8833</item>
        <item name="android:fullDark">#FFFF8833</item>
        <item name="android:topBright">#FF0000FF</item>
        <item name="android:topDark">#FF0000FF</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:alertDialogStyle">@style/CustomDialogTheme</item>
    </style>

</resources>
